pipeline {
    
    agent any
    

    
    stages {
        
        stage('Checkout') {
            steps {
                git url:'https://github.com/claudiomartinbianco/cmb-demo.git'                
            }
        }
        


        
        stage('Unit Tests') {
            steps {
                script {
                        sh "npm install express --save"
                        sh "npm install -D mocha chai chai-http"
                        sh "npm test"                                               
                }
            }
        }
        
            
        

        
    }
}
